@model IEnumerable<MasterDetailProject.Models.Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders</h2>
<hr/>
<div class="container">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.CustomerID</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.TotalAmount</td>
                    <td>
                        <a href="/Order/OrderDetail/@order.OrderID" class="btn btn-info">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a class="btn btn-primary" style="margin-left:40%" href="/Order/AddOrder">Add Order</a>
